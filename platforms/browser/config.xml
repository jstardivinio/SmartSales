<?xml version='1.0' encoding='utf-8'?>
<widget id="com.maviance.smartsales" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SmartSales</name>
    <description>
        An app that permits its users to purchase and make payments for services like mobile topups, bill payments, etc.
    </description>
    <author email="jstar.divinio@gmail.com" href="">
        Cjordan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <splash src="www/img/logo.png" />
</widget>
